<!DOCTYPE html>
<html>
<head>
  <title>Gist</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<header class="main">
  <div class="left-side">
    <a class="button home" href="/">Home</a>
    <a class="button search" href="#">Search</a>
  </div>
  <h1 class="title"><a href="/">Gist</a></h1>
</header>


<div class="content-wrap">
  <div class="content">
    <%= yield %>
  </div>
</div>

<%= render(:partial => "layouts/footer") %>


<script type="text/javascript">
  $(document).ready(function() {

    $(document).scroll(function() {
      if($(document).scrollTop() > $('.recommended-articles').height()) {
        $('header.main').css({
          'box-shadow': '0px 2px 4px rgba(0,0,0,0.08)'
        });
    
        $('.recommended-articles').css({
          'box-shadow': 'none'
        });
      } else {
        $('header.main').css({
          'box-shadow': 'none'
        });
    
        $('.recommended-articles').css({
          'box-shadow': '0px 2px 4px rgba(0,0,0,0.08)'
        });
      }
    });
  });
</script>

</body>
</html>
