<div class="recommended-articles">
  <% articles.each do |article| %>
    <a class="recommended-article-link" href="<%= article_path(article) %>">
      <div class="recommended-article">
        <div class="window" style="background-image: url('<%= article.images[0].url %>')"></div>
        <div class="body">
          <h3 class="author"><%= article.author %></h3>
          <h2 class="title"><%= article.title %></h2>
        </div>
      </div>
    </a>
  <% end %>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $(document).scroll(function() {
      if($(document).scrollTop() > $('.recommended-articles').height()) {
        $('header.main').css({
          'box-shadow': '0px 2px 4px rgba(0,0,0,0.08)'
        });
    
        $('.recommended-articles').css({'box-shadow': 'none'});
      } else {
        $('header.main').css({'box-shadow': 'none'});
    
        $('.recommended-articles').css({
          'box-shadow': '0px 2px 4px rgba(0,0,0,0.08)'
        });
      }
    });
  });
</script>